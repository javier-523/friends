<div class="card" style="width: 30rem";>
  <div class="card-header">
    <h3>Sign up</h3>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form-group">
        <%= f.label :email %><br>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control-sm", placeholder: "Email Address" %>
      </div>

      <br>
      <div class="field form-group">
        <%= f.label :password %><br>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control-sm", placeholder: "Password" %>
        <br>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </div>

      <br>
      <div class="field form-group">
        <%= f.label :password_confirmation %><br>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control-sm", placeholder: "Password" %>
      </div>

      <br />
      <div class="actions d-flex">
        <%= f.submit "Sign up", class: "btn btn-primary ms-auto me-3" %>
        <%= link_to "Cancel", :back, class: "btn btn-secondary" %>
      </div>

    <% end %>
  </div>
</div>

<br>
<%= render "devise/shared/links" %>
